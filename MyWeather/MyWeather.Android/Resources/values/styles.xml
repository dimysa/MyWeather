<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="MainTheme" parent="MainTheme.Base">
    <item name="android:textAppearanceButton">@style/CustomTextAppearance.Material.Button</item>
  </style>
  <!-- Base theme applied no matter what API -->
  <style name="MainTheme.Base" parent="Theme.AppCompat.Light">
    <!--If you are using revision 22.1 please use just windowNoTitle. Without android:-->
    <item name="windowNoTitle">true</item>
    <!--We will be using the toolbar so no need to show ActionBar-->
    <item name="windowActionBar">false</item>
     <!--Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette 
     colorPrimary is used for the default action bar background--> 
    <item name="colorPrimary">#FFFFFF</item>
     <!--colorPrimaryDark is used for the status bar--> 
    <item name="colorPrimaryDark">#272930</item>
     <!--colorAccent is used as the default value for colorControlActivated
         which is used to tint widget-->s 
    <item name="colorAccent">#42c797</item>
     <!--You can also set colorControlNormal, colorControlActivated
         colorControlHighlight and colorSwitchThumbNormal.-->
    <item name="windowActionModeOverlay">true</item>


    <item name="android:textColorSecondary">#5042c797</item>
    <item name="android:textColorHint">#50ffffff</item>
    
    <!--<item name="android:windowBackground">@android:color/background_light</item>-->

    <!--<item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>-->
  </style>

  <!--<style name="Theme.Splash" parent="MainTheme">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">true</item>
  </style>-->


  <style name="CustomTextAppearance.Material.Button" parent="@android:style/TextAppearance.Material.Button">
    <item name="textAllCaps">false</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <!--<style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">#e8ddc2</item>
  </style>-->
</resources>